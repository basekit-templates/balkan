{% extends "layout.twig" %}

{% block content %}


{{widget('extendednavigation', 'navigation', {"align":"left"})|raw}}

<div class="page-wrapper">

    <!-- Container -->
    <div class="container">

        {% include "includes/header.twig" %}

        <!-- Page Content -->
        <section class="template-content">

            <div class="post-container">

            {{widget('blogpost', 'singleblogpost', {})|raw}}

            </div>

            <!-- Footer Text Widget -->
             <footer class="template-footer">
                {{widget('content', 'footer-content', {
                content: '<p>&copy; Copyright</p>'
                })|raw}}
            </footer>

        </section>
        <!-- End Page Content -->

    </div>
    <!-- End Container -->

</div>
<!-- End Page Wrapper -->

{% endblock %}